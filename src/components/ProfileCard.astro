---
interface Props {
  employeeName: string;
  avatar: string;
}

const { employeeName, avatar } = Astro.props;
---

<section
  class="h-[12.5rem] w-[20.5rem] rounded-2xl bg-sad-dark-blue lg:row-span-2 lg:h-[32rem] lg:w-[16rem]"
>
  <div
    class="flex h-[8.2rem] w-[20.5rem] items-center justify-evenly rounded-2xl bg-sad-blue px-2 py-3 lg:h-[22rem] lg:w-[16rem] lg:flex-col lg:items-start lg:px-8"
  >
    <img
      src=`/src/assets/${avatar}`
      alt="Work"
      class="h-[4.5rem] w-[4.5rem] rounded-full border-[3px] border-white lg:h-[5.4rem] lg:w-[5.4rem]"
    />
    <div class="flex flex-col">
      <h2 class="text-[0.9rem] font-normal text-sad-pale-blue">Report for</h2>
      <h1
        class="text-[1.45rem] font-light text-white lg:text-[2.35rem] lg:font-light lg:leading-tight"
      >
        {employeeName}
      </h1>
    </div>
  </div>
  <ul
    class="mt-5 flex items-center justify-around lg:ml-8 lg:flex-col lg:items-start lg:gap-4"
  >
    <li class="font-light text-sad-pale-blue">Daily</li>
    <li class="text-sad=desaturated-blue font-light">Weekly</li>
    <li class="font-light text-sad-pale-blue">Monthly</li>
  </ul>
</section>
