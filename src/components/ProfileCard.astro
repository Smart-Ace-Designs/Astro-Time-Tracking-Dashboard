---
interface Props {
  employeeName: string;
  avatar: string;
}

const { employeeName, avatar } = Astro.props;
---

<section
  class="h-[12.5rem] w-[20.5rem] overflow-hidden rounded-2xl bg-sad-dark-blue"
>
  <div
    class="flex h-[8.2rem] w-[20.5rem] items-center justify-evenly rounded-2xl bg-sad-blue px-2 py-3"
  >
    <img
      src=`/src/assets/${avatar}`
      alt="Work"
      class="h-[4.5rem] w-[4.5rem] rounded-full border-[3px] border-white"
    />
    <div class="flex flex-col">
      <h2 class="text-[0.9rem] font-normal text-sad-pale-blue">Report for</h2>
      <h1 class="text-[1.45rem] font-light text-white">{employeeName}</h1>
    </div>
  </div>
  <div class="mt-5 flex items-center justify-around">
    <p class="font-light text-sad-pale-blue">Daily</p>
    <p class="font-light text-sad=desaturated-blue">Weekly</p>
    <p class="font-light text-sad-pale-blue">Monthly</p>
  </div>
</section>
