---
import MainLayout from "@/layouts/MainLayout.astro";
import ProfileCard from "@/components/ProfileCard.astro";
import TimeCard from "@/components/TimeCard.astro";
---

<MainLayout title="Frontend Mentor | Time Tracking Dashboard">
  <article class="my-20 grid grid-cols-1 gap-6">
    <ProfileCard employeeName="Jeremy Robson" avatar="image-jeremy.png" />
    <TimeCard
      backgroundColor="bg-sad-peach"
      image="icon-work.svg"
      title="Work"
      time="32"
      previousTime="36"
    />
    <TimeCard
      backgroundColor="bg-sad-soft-blue"
      image="icon-play.svg"
      title="Play"
      time="10"
      previousTime="8"
    />
    <TimeCard
      backgroundColor="bg-sad-light-red"
      image="icon-study.svg"
      title="Study"
      time="4"
      previousTime="7"
    />
    <TimeCard
      backgroundColor="bg-sad-lime-green"
      image="icon-exercise.svg"
      title="Exercise"
      time="4"
      previousTime="5"
    />
  </article>
</MainLayout>
